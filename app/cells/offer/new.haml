%h2 New offer
%form{action: "/offers", method: 'post'}
  Title:
  %br
  %input{:name => "offer[title]", :type => "text", :value => "#{@offer.title}"}
  %br
  offer Type:
  %br
  %select#offer_type{:name => "offer[offer_type]"}
    %option{:value => 1} Spend Over
  %br
  Discount Type:
  %br
  %select{:name => "offer[discount_type]"}
    %option{:value => 1} Percentage
    %option{:value => 2} Amount
  %br
  Discount:
  %br
  %input{:name => "offer[discount]", :type => "number", :step => "0.01", :value => "#{@offer.discount}"}
  %br
  Spend over Limit:
  %br
  %input{:name => "offer[spend_over_limit]", :type => "number", :step => "1", :value => "#{@offer.spend_over_limit}"}
  %br
  Valid From:
  %br
  %input{:name => "offer[valid_from]", :type => "datetime-local", :value => "#{@offer.valid_from}"}
  %br
  Valid To:
  %br
  %input{:name => "offer[valid_to]", :type => "datetime-local", :value => "#{@offer.valid_to}"}
  %br
  %br
  %input{:type => "submit", :value => "Submit"}
