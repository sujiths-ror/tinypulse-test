.container
  %form{action: "/offers", method: 'post'}
    .form-group
      %label{:for => "titleInput1"} Title
      %input#titleInput1.form-control{:name => "offer[title]",:placeholder => "50% Off", :type => "text", value: "#{@offer.title}"}

      %label{:for => "spendoverSelect1"} Example select
      %select#spendoverSelect1.form-control{:name => "offer[offer_type]"}
        %option{value: 1} Spend Over

      %label{:for => "discounttypeSelect1"} Example select
      %select#discounttypeSelect1.form-control{:name => "offer[discount_type]"}
        %option{value: 1} Percentage
        %option{value: 2} Amount

      %label{:for => "discountInput1"} Discount
      %input#discountInput1.form-control{:name => "offer[discount]", :type => "number", :step => "0.01", :value => "#{@offer.discount}"}

      %label{:for => "limitInput1"} Spend Over Limit
      %input#limitInput1.form-control{:name => "offer[spend_over_limit]", :type => "number", :step => "0.01", :value => "#{@offer.spend_over_limit}"}

      %label{:for => "validfromInput1"} Valid from
      %input#validfromInput1.form_datetime{:name => "offer[valid_from]", :size => "16", :type => "datetime-local", :value => "#{Time.now.to_s}"}

      %label{:for => "validtoInput1"} Valid to
      %input#validtoInput1.form_datetime{:name => "offer[valid_to]", :size => "16", :type => "datetime-local", :value => "#{Time.now.to_s}"}

    %button.btn.btn-primary{:type => "submit"} Submit

